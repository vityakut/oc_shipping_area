{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-shipping" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-shipping" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-night">{{ entry_night }}</label>
            <div class="col-sm-10">
              <select name="shipping_area_night" id="input-night" class="form-control" onchange="toggleCostNigth($(this).val());">
                {% if shipping_area_night %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                  <option value="0">{{ text_disabled }}</option>
                {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <fieldset>
            <legend>{{ text_settings }}</legend>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-tax-class">{{ entry_tax_class }}</label>
              <div class="col-sm-10">
                <select name="shipping_area_tax_class_id" id="input-tax-class" class="form-control">
                  <option value="0">{{ text_none }}</option>
                  {% for tax_class in tax_classes %}
                    {% if tax_class.tax_class_id == shipping_area_tax_class_id %}
                      <option value="{{ tax_class.tax_class_id }}" selected="selected">{{ tax_class.title }}</option>
                    {% else %}
                      <option value="{{ tax_class.tax_class_id }}">{{ tax_class.title }}</option>
                    {% endif %}
                  {% endfor %}
                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
              <div class="col-sm-10">
                <select name="shipping_area_geo_zone_id" id="input-geo-zone" class="form-control">
                  <option value="0">{{ text_all_zones }}</option>
                  {% for geo_zone in geo_zones %}
                    {% if geo_zone.geo_zone_id == shipping_area_geo_zone_id %}
                      <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
                    {% else %}
                      <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                    {% endif %}
                  {% endfor %}
                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
              <div class="col-sm-10">
                <select name="shipping_area_status" id="input-status" class="form-control">
                  {% if shipping_area_status %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                  {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                  {% endif %}
                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
              <div class="col-sm-10">
                <input type="text" name="shipping_area_sort_order" value="{{ shipping_area_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
              </div>
            </div>
          </fieldset>

          <fieldset>
            <legend>{{ text_areas }}</legend>
            <table id="shipping-areas" class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <td class="text-left required">{{ entry_area }}</td>
                  <td class="text-left">{{ entry_description }}</td>
                  <td class="text-center">{{ entry_cost }}</td>
                  <td class="text-right shipping_area_cost_night {% if not shipping_area_night %}hidden{% endif %}">{{ entry_cost_night }}</td>
                  <td></td>
                </tr>
              </thead>
              <tbody>

                {% for areas in shipping_area_areas %}
                  {% set shipping_area_row = 0 %}
                  <tr id="shipping-areas-row{{ shipping_area_row }}">
                    <td class="text-center">
                      <input type="hidden" name="shipping_area_areas[{{ shipping_area_row }}][shipping_area_id]" value="{{ areas.shipping_area_id }}" />
                      <div class="input-group">
                        <input type="text" name="shipping_area_areas[{{ shipping_area_row }}][shipping_area_name]" value="{{ areas.shipping_area_name }}" placeholder="{{ entry_area }}" class="form-control" />
                      </div>
                      {% if error_shipping_area[option_value_row] %}
                        <div class="text-danger">{{ error_shipping_area[option_value_row] }}</div>
                      {% endif %}
                    </td>
                    <td class="text-center">
                      <div class="input-group">
                        <input type="text" name="shipping_area_areas[{{ shipping_area_row }}][shipping_area_description]" value="{{ areas.shipping_area_description }}" placeholder="{{ entry_description }}" class="form-control" />
                      </div>
                      {% if error_shipping_area[option_value_row] %}
                        <div class="text-danger">{{ error_shipping_area[option_value_row] }}</div>
                      {% endif %}
                    </td>
                    <td class="text-center">
                      <div class="input-group">
                        <input type="text" name="shipping_area_areas[{{ shipping_area_row }}][shipping_area_cost]" value="{{ areas.shipping_area_cost }}" placeholder="{{ entry_cost }}" class="form-control" />
                      </div>
                      {% if error_shipping_cost[option_value_row] %}
                        <div class="text-danger">{{ error_shipping_cost[option_value_row] }}</div>
                      {% endif %}
                    </td>
                    <td class="text-center shipping_area_cost_night {% if not shipping_area_night %}hidden{% endif %}">
                      <div class="input-group">
                        <input type="text" name="shipping_area_areas[{{ shipping_area_row }}][shipping_area_cost_night]" value="{{ areas.shipping_area_cost_night }}" placeholder="{{ entry_cost_night }}" class="form-control" />
                      </div>
                      {% if error_shipping_cost_night[option_value_row] %}
                        <div class="text-danger">{{ error_shipping_cost_night[option_value_row] }}</div>
                      {% endif %}
                    </td>
                    <td class="text-right"><button type="button" onclick="$('#shipping-areas-row{{ shipping_area_row }}').remove();" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>
                  </tr>
                  {% set shipping_area_row = shipping_area_row + 1 %}
                {% endfor %}
              </tbody>

              <tfoot>
                <tr>
                  <td class="blank" colspan="{% if shipping_area_night %}4{% else %}3{% endif %}"></td>
                  <td class="text-right"><button type="button" onclick="addShippingArea();" data-toggle="tooltip" title="{{ button_shipping_area_add }}" class="btn btn-primary"><i class="fa fa-plus-circle"></i></button></td>
                </tr>
              </tfoot>
            </table>
          </fieldset>


        </form>
      </div>
    </div>
  </div>

  <script type="text/javascript"><!--
    var shipping_area_row = {{ shipping_area_row }};

    function addShippingArea() {
      html = '<tr id="shipping-areas-row{{ shipping_area_row }}">';
      html += '<td class="text-center"><input type="hidden" name="shipping_area_areas[{{ shipping_area_row }}][shipping_area_id]" value="" />';
      html += '<div class="input-group">';
      html += '<input type="text" name="shipping_area_areas[{{ shipping_area_row }}][shipping_area_name]" value="" placeholder="{{ entry_area }}" class="form-control" />';
      html += '</div></td>';
      html += '<td class="text-center"><div class="input-group">';
      html += '<input type="text" name="shipping_area_areas[{{ shipping_area_row }}][shipping_area_description]" value="" placeholder="{{ entry_description }}" class="form-control" />';
      html += '</div></td>';
      html += '<td class="text-center"><div class="input-group">';
      html += '<input type="text" name="shipping_area_areas[{{ shipping_area_row }}][shipping_area_cost]" value="" placeholder="{{ entry_cost }}" class="form-control" />';
      html += '</div></td>';
      html += '<td class="text-center shipping_area_cost_night {% if not shipping_area_night %}hidden{% endif %}"><div class="input-group">';
      html += '<input type="text" name="shipping_area_areas[{{ shipping_area_row }}][shipping_area_cost_night]" value="" placeholder="{{ entry_cost_night }}" class="form-control" />';
      html += '</div></td>';
      html += '<td class="text-right">';
      html += '<button type="button" onclick="$('#shipping-areas-row{{ shipping_area_row }}').remove();" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>';
      html += '</tr>';

      $('#shipping-areas tbody').append(html);

      shipping_area_row++;
    }

    function toggleCostNigth(night) {
      $("#shipping-areas tbody td.shipping_area_cost_night").toggleClass("hidden");
      $('#shipping-areas tfoot td.blank').attr('colspan', function(index, attr){
        return attr == '4' ? '3' : '4';
    });
    }
    //--></script>

</div>
{{ footer }} 